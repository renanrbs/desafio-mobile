<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.stone.desafiomobile.view.PurchaseListActivity">

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="@string/app_name"
        android:textAppearance="?attr/textAppearanceListItem" />

    <fragment
        android:id="@+id/purchase_list_fragment"
        android:name="com.stone.desafiomobile.view.PurchaseListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_purchase_list" />

</FrameLayout>
